@model ProfileViewModel

@{
    ViewData["Title"] = "PROFILE";
}
<h1>@ViewData["Title"]</h1>

<p>PROFILE</p>

<table class="table">
    <thead>
        <tr>
            <th>

            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Tweets)
        {

            <img width="25%" src="/images/@item.User.Avatar" title="Image"/>
            <tr>
                <td>
                    <a asp-action="ByHandle" asp-route-id="@item.User.Id">
                        @Html.DisplayFor(modelItem => item.User.Handle)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Likes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comments)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> | |
                   @* <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Create">Create</a>*@
                   
                </td>
            </tr>
        }
    </tbody>
</table>



 
